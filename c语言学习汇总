while语句
#include<stdio.h>
int main()
{
	int line = 0;
	printf("加入比特\n");
	while (line < 2000)
	{
		printf("敲一行代码\n");
		line++;
	}
	printf("给我一个好offer\n");
	return 0;
}
函数初识
#include<stdio.h>
int Add(int x, int y)
{
	int z = x + y;
	return z;
}
int main()
{
	int num1 = 10;
	int num2 = 20;
	int num3 = 0;
	int a = 100;
	int b = 200;
	num3 = Add(num1 ,num2);
	num3 = Add(a, b);
	printf("num3=%d\n", num3);

	return 0;
}
比大小问题if语句
#include<string.h>
#include<stdio.h>
int main()
{
	int num1 = 10;
	int num2 = 20;
	if (num1 > num2)
		printf("较大值:%d\n", num1);
	else
		printf("较大值是:%d\n", num2);
	return 0;
}
另一种写法
#include<stdio.h>
int MAX(int x, int y)
{
	if (x > y)
		return x;
	else
		return y;

}
int main()
{
	int num1 = 10;
	int num2 = 20;
	int max = 0; \
		max = MAX(num1, num2);
	printf("max=%d\n", max);
	return 0;

}
逻辑语
//非零为真,；零为假。
#include<stdio.h>
int main()
{
	int a = 3;
	int b = 5;
	int c = a && b;
	printf("%d\n", c);
	return 0;

}
